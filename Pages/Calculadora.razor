@page "/calculadora"
<h3>Calculadora</h3>
<div class="form-group">
    <label for="primerNumero"> Primer Numero</label>
    <input type="text" name="primerNumero" id="primerNumero"  @bind-value="primerNumero" />
</div>

<div class="form-group">
    <label for="segundoNumero"> Segundo Numero</label>
    <input type="text" name="segundoNumero" id="segundoNumero"  @bind-value="segundoNumero" />
</div>

<div class="btn-group">
    <button type="button" class="form-control" @onclick="calcular" width>Calcular </button>
</div>

<div class="form-group">
    <p>La suma es: @suma</p>
    <p>La resta es: @resta </p>
    <p>La multiplicacion es: @multiplicacion</p>
    
</div>


@code {
    float primerNumero = 0;
    float segundoNumero=0;
    float suma = 0, resta = 0, multiplicacion = 0;

    void calcular()
    {
        suma = primerNumero + segundoNumero;
        resta=primerNumero-segundoNumero;
        multiplicacion = primerNumero * segundoNumero;
    }
}
